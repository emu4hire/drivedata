<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/button_material_light"
    tools:context=".MainMenu"
    >

    <Button
        android:id="@+id/button"

        android:text="Begin Capture"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width=   "350dp"
        android:layout_height="75dp"
        android:background="@drawable/begin_capture"
        android:onClick="startCapture"
        android:layout_above="@+id/capture_maanger"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/settings"

        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/begin_capture"
        android:shadowRadius="5"
        android:onClick="settingsStart"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/capture_maanger"
        />

    <Button
        android:id="@+id/capture_maanger"

        android:text="Captures"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/begin_capture"
        android:onClick="captureManager"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>