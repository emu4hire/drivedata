<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_string"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="startCapture"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logNameEntry"
        android:layout_marginTop="35dp"
        android:inputType="text"
        android:hint="Enter a name for this capture."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button" />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_readiness"
        android:id="@+id/system_preperation_indicator"
        android:textSize="25dp"
        android:textColor="@color/orange"
        android:checked="false"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/logNameEntry"
        android:layout_centerHorizontal="true" />

</RelativeLayout>