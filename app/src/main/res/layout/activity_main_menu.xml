<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/button_material_light"
    tools:context=".MainMenu"
    >

    <Button
        android:id="@+id/button"

        android:text="Begin Capture"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width=   "350dp"
        android:layout_height="75dp"
        android:background="@drawable/begin_capture"
        android:onClick="startCapture"
        android:layout_above="@+id/settings"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp" />

    <Button
        android:id="@+id/settings"

        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="175dp"
        android:layout_height="150dp"
        android:background="@drawable/settings_button"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginBottom="39dp"
        />

    <Button
        android:id="@+id/capture_maanger"

        android:text="Captures"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="175dp"
        android:layout_height="150dp"
        android:background="@drawable/capture_manager"
        android:layout_alignTop="@+id/settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>