<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_string"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="startCapture"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accel_switcher"
        android:id="@+id/accel_switch"
        android:layout_below="@+id/button"
        android:layout_marginTop="70dp"
        android:checked="true"
        android:onClick="accelButtonCheck"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_switch"
        android:id="@+id/location_switch"
        android:layout_below="@+id/accel_switch"
        android:layout_alignRight="@+id/accel_switch"
        android:layout_alignEnd="@+id/accel_switch"
        android:layout_marginTop="40dp"
        android:checked="true"
        android:onClick="locationButtonCheck"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tick_edit"
        android:text="@string/tick_enter"
        android:layout_below="@+id/location_switch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />
</RelativeLayout>
